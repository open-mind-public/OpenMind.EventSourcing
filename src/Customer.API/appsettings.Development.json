{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Username=postgres;Password=password;Database=OpenMind.Customer;"
  },
  "Kafka": {
    "BootstrapServers": "localhost:19092",
    "Topic": "customer-events"
  },
  "Serilog": {
    "Enrich": [
      "FromLogContext"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp} [{Level:u3}] {Message} {Properties} {NewLine}{Exception}"
        }
      }
    ]
  }
}
